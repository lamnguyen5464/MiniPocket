<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_checked="false"
        >
        <shape>
            <solid android:color="@color/RED"/>
            <corners
                android:radius="90dp"
                />
        </shape>
    </item>
    <item
        android:state_checked="true"
        >
        <shape>
            <solid android:color="@color/GREEN"/>
            <corners
                android:radius="90dp"
                />
        </shape>
    </item>
</selector>