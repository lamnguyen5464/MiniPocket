<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/selected"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/background_select_day"
        android:visibility="invisible"
        />
    <Button
        android:id="@+id/btDayCell"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        android:background="@android:color/transparent"
        />
    <TextView
        android:id="@+id/labelDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="11dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/WHITE"
        android:layout_above="@id/dayOfWeek"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/math_tapping"
        android:text="14/7"
        />
    <TextView
        android:id="@+id/dayOfWeek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/markText"
        android:layout_marginBottom="3dp"
        android:textSize="12dp"
        android:textColor="@color/WHITE"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/math_tapping"
        android:background="@android:color/transparent"
        android:foreground="?attr/selectableItemBackground"
        android:text="14/7"
        />

    <View
        android:id="@+id/markText"
        android:layout_width="5dp"
        android:layout_height="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="@drawable/custom_background_earning"
        />
</RelativeLayout>