<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/BACKGROUND"
    android:paddingRight="15dp"
    android:paddingLeft="15dp"
    android:paddingBottom="10dp"
    >

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_background_white"
        android:padding="20dp"
        android:foreground="?attr/selectableItemBackground"
        >

        <TextView
            android:id="@+id/labelMain"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:textSize="17dp"
            android:layout_alignParentTop="true"
            android:fontFamily="@font/chalkboard"
            android:padding="5dp"
            android:background="@drawable/custom_button_back_paying"
            android:text="Mon, Tue, Wed" />

        <TextView
            android:id="@+id/labelValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"
            android:fontFamily="@font/math_tapping"
            android:text="100.000"
            android:textColor="@color/WHITE"
            android:textSize="25dp" />
        <TextView
            android:id="@+id/labelNote"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:layout_below="@+id/labelValue"
            android:layout_alignParentRight="true"
            android:textAlignment="textEnd"
            android:layout_toRightOf="@+id/labelMain"
            android:layout_marginLeft="20dp"
            android:textSize="17dp"
            android:fontFamily="@font/chalkboard"
            android:text="Mua tra sua" />
        <TextView
            android:id="@+id/labelStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/labelMain"
            android:layout_toRightOf="@+id/labelDate"
            android:fontFamily="@font/math_tapping"
            android:text="25/05/2020" />

        <ImageView
            android:id="@+id/arrow"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/labelStartDate"
            android:layout_alignTop="@+id/labelStartDate"
            android:layout_alignBottom="@+id/labelStartDate"
            android:background="@android:color/transparent"
            android:src="@drawable/icon_arrow_white" />

        <TextView
            android:id="@+id/labelEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/WHITE"
            android:textSize="20dp"
            android:layout_alignTop="@+id/labelStartDate"
            android:layout_toRightOf="@+id/arrow"
            android:fontFamily="@font/math_tapping"
            android:text="25/05/2020" />

    </RelativeLayout>


</RelativeLayout>